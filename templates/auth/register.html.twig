{% extends 'auth/base.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
    <div id="content">
        <div class="d-flex align-items-center justify-content-center container-sec">
            <div class="wrapper container-fluid border rounded px-5" style="background-color: #f5f5f5;">
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                <span class="title pb-3">
                    <img class="auth-logo" src="images/logo/expenseit.svg" alt="ExpenseIt Logo">
                </span>
                <span class="title mb-5">
                    Register
                </span>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm, {'attr': {'class': 'login-form validate-form pt-1'}}) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="wrapper-input" data-validate="John">
                            {{ form_widget(registrationForm.firstname, {'attr': {'class': 'input pass-font'}}) }}
                            <span class="focus-input" data-placeholder="First Name"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="wrapper-input" data-validate="Doe">
                            {{ form_widget(registrationForm.lastname, {'attr': {'class': 'input pass-font'}}) }}
                            <span class="focus-input" data-placeholder="Last Name"></span>
                        </div>
                    </div>
                </div>

                <div class="wrapper-input validate-input" data-validate="Example: john@doe.com">
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'input pass-font'}}) }}
                    <span class="focus-input" data-placeholder="Email"></span>
                </div>

                <div class="wrapper-input validate-input" data-validate="Enter password">
                        <span class="show-pw" id="show-pass">
                            <i class="fa fa-eye" id="show-pass-icon"></i>
                        </span>
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'input pass-font'} , 'id': 'password'}) }}
                    <span class="focus-input" data-placeholder="Password"></span>
                </div> {# TODO : Add confirm pass? #}

{#                <div class="wrapper-input validate-input" data-validate="Confirm password" style="margin-bottom: 0px; !important">#}
{#                    {{ form_row(registrationForm.confirmPassword, {'attr': {'class': 'input pass-font'}}) }}#}
{#                    <span class="focus-input" data-placeholder="Confirm Password"></span>#}
{#                </div>#}

                <div class="d-flex gap-2 validate-input" data-validate="Agree to terms">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    <p class="text-small cursor-pointer" id="termsText">I accept the Terms and Conditions</p>
                </div>

                <div class="container-btn mt-3 mb-3">
                    <div class="wrap-btn">
                        <div class="bg-btn"></div>
                        <button type="submit" class="form-btn">
                            Register
                        </button>
                    </div>
                </div>

                <div class="text-center">
                    <a class="small back-link" href="{{ path('app_login') }}">Return to login</a>
                </div>

                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>


{% endblock %}

{% block js %}
    <script>
        $(document).ready(function() {
            // if ($('#username').va)
            if ($('#registration_form_firstname').val().trim() != "") {
                $('#registration_form_firstname').addClass('has-val');
            }

            if ($('#registration_form_lastname').val().trim() != "") {
                $('#registration_form_lastname').addClass('has-val');
            }

            if ($('#registration_form_email').val().trim() != "") {
                $('#registration_form_email').addClass('has-val');
            }
        })
    </script>
{% endblock %}
