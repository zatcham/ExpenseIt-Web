{% extends 'auth/base.html.twig' %}

{% block title %}Log In{% endblock %}

{% block content %}
    <div id="content">
        <div class="d-flex align-items-center justify-content-center container-sec">
        <div class="wrapper container-fluid">
            <form class="login-form validate-form" action="{{ path('app_login') }}" method="POST">
                    <span class="title pb-3">
                        <!--<i class="zmdi zmdi-font"></i>-->
                        <img src="../assets/logo_small.png" alt="ExpenseIt Logo">
                    </span>
                <span class="title pb-3">
                         Welcome
                    </span>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="wrapper-input validate-input" data-validate="Example: john@doe.com">
                    <input class="input pass-font" type="text" name="_username" id="username" value="{{ last_username }}" required>
                    <span class="focus-input" data-placeholder="Email"></span>
                </div>

                <div class="wrapper-input validate-input" data-validate="Enter password" style="margin-bottom: 0px; !important">
                    <span class="show-pw">
                        <i class="fa fa-eye" id="show-pass"></i>
                    </span>
                    <input class="input pass-font" type="password" name="_password" id="password">
                    <span class="focus-input" data-placeholder="Password"></span>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="container-btn mt-3">
                    <div class="wrap-btn">
                        <div class="bg-btn"></div>
                        <button class="form-btn">
                            Login
                        </button>
                    </div>
                </div>
                <hr/>
                <div class="text-2 text-center mt-2 mb-3">
                    Other login options:
                </div>
                <div class="d-flex align-items-center justify-content-center">
                    <div class="oauth-btn">
                        <div class="oauth-wrapper">
                            <!--                            <img class="oauth-icon" src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg"/>-->
                            <i class="oauth-icon fa-brands fa-google"></i>
                        </div>
                    </div>
                    <div class="oauth-btn">
                        <div class="oauth-wrapper">
                            <i class="oauth-icon fa-brands fa-github"></i>
                        </div>
                    </div>
                    <div class="oauth-btn">
                        <div class="oauth-wrapper">
                            <i class="oauth-icon fa-brands fa-microsoft"></i>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-3">
                        <span class="text-1">
                            Not got an account?
                        </span>
                    <a class="text-2" href="/register">
                        Sign Up
                    </a>
                </div>
                <footer class="text-center mt-2">
                    <small class="text-small text-muted">&copy; <script>document.write(new Date().getFullYear())</script> ExpenseIt</small>
                </footer>
            </form>

        </div>
    </div>
    </div>
{% endblock %}

{% block js %}
    <script>
        $(document).ready(function() {
            // if ($('#username').va)
            if ($('#username').val().trim() != "") {
                $('#username').addClass('has-val');
            }
        })
    </script>
{% endblock %}
