{% extends 'auth/base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block content %}

<div id="content">
    <div class="d-flex align-items-center justify-content-center container-sec">
        <div class="wrapper container-fluid border rounded px-5" style="background-color: #f5f5f5;">
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            <span class="title pb-3">
                <img class="auth-logo" src="{{ asset('images/logo/expenseit.svg') }}" alt="ExpenseIt Logo">
            </span>
            <span class="title mb-5">
                Reset Password
            </span>


            {{ form_start(requestForm) }}
            <div class="wrapper-input validate-input" data-validate="Example: john@doe.com">
                {{ form_widget(requestForm.email, {'attr': {'class': 'input pass-font'}}) }}
                <span class="focus-input" data-placeholder="Email"></span>
            </div>
            <div>
            <p class="text-muted text-center">
                Enter your email address, and we will send you a
                link to reset your password.
            </p>
            </div>

            <div class="container-btn mt-3">
            <div class="wrap-btn">
                <div class="bg-btn"></div>
                <button type="submit" class="form-btn">
                    Reset Password
                </button>
            </div>
        </div>
        {{ form_end(requestForm) }}
            <div class="text-center mt-3">
                <a class="small back-link" href="{{ path('app_login') }}">Return to login</a>
            </div>
        </div>
    </div>
</div>

{% endblock %}
