{% extends 'dashboard/base.html.twig' %}

{% block title %}View Budget{% endblock %}

{% block css %}
    <link href="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-2.0.2/datatables.min.css" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="container-fluid py-4">
        <div class="row mt-4">
            <div class="col-sm-6 col-lg-12">
                <div class="card h-100">
                    <div class="card-header pb-0 p-3">
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="mb-0">Budgets {{ dump(budgets) }}</h6>
                                <hr class="hr-visible"/>
                            </div>
                        </div>
                    </div>
                    <div class="d-sm-flex justify-content-between">
                        <div>
                            <a href="javascript:;" class="btn btn-icon bg-gradient-primary">
                                New order
                            </a>
                        </div>
                        <div class="d-flex">
                            <div class="dropdown d-inline">
                                <a href="javascript:;" class="btn btn-outline-dark dropdown-toggle" data-bs-toggle="dropdown" id="navbarDropdownMenuLink2" aria-expanded="false">
                                    Filters
                                </a>
                                <ul class="dropdown-menu dropdown-menu-lg-start px-2 py-3" aria-labelledby="navbarDropdownMenuLink2" style="">
                                    <li><a class="dropdown-item border-radius-md" href="javascript:;">Status: Paid</a></li>
                                    <li><a class="dropdown-item border-radius-md" href="javascript:;">Status: Refunded</a></li>
                                    <li><a class="dropdown-item border-radius-md" href="javascript:;">Status: Canceled</a></li>
                                    <li>
                                        <hr class="horizontal dark my-2">
                                    </li>
                                    <li><a class="dropdown-item border-radius-md text-danger" href="javascript:;">Remove Filter</a></li>
                                </ul>
                            </div>
                            <button class="btn btn-icon btn-outline-dark ms-2 export" data-type="csv" type="button">
                                <span class="btn-inner--icon"><i class="ni ni-archive-2"></i></span>
                                <span class="btn-inner--text">Export CSV</span>
                            </button>
                        </div>
                    </div>

                    <div class="card-body p-3">
                        <ul class="list-group">
                            <li class="list-group-item border-0 justify-content-between ps-0 pb-0 border-radius-lg">
                                <div class="table-responsive">

                                </div>
                                <table id="budget_table" class="table table-striped">
                                    <thead>
                                    <tr>
                                        <th>Budget Name</th>
                                        <th>Department Name</th>
                                        <th>Status</th>
                                        <th>Total Budget</th>
                                        <th>Per Employee Budget</th> {# TODO : If plan is above basic #}
                                        <th>Go To</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for budget in budgets %}
                                        <tr>
                                            <td>{{ budget.name }}</td>
                                            <td>{{ budget.department_name }}</td>
                                            <td>{{ budget.status }}</td>
                                            <td>{{ budget.total }}</td>
                                            <td>{{ budget.per_employee }}</td>
                                            <td><a href="/budget/detail/{{ budget.id }}">Go To</a></td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </li>

                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}

{% block js %}
    <script src="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-2.0.2/datatables.min.js"></script>
{#    <script src="{{ asset('js/datatable.js') }}"></script>#}
    <script>
        // Instantiate datatables
        $(document).ready(function() {
            var table = new DataTable('#budget_table', {
                searchable: true,
                fixedHeight: false
            });

            $('#budget_table tbody').on('click', 'tr', function () {
                var data = table.row(this).data();
                console.log(data);
            });
        })


    </script>
{% endblock %}