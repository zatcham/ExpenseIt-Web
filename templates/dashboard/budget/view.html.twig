{% extends 'dashboard/base.html.twig' %}

{% block title %}View Budget{% endblock %}

{% block css %}
    <link href="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-2.0.2/datatables.min.css" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="container-fluid py-4">
        <div class="row mt-4">
            <div class="col-sm-6 col-lg-12">
                <div class="card h-100">
                    <div class="card-header pb-0 p-3">
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="mb-0">Budgets {{ dump(budgets) }}</h6>
                                <hr class="hr-visible"/>
                            </div>
                        </div>
                    </div>

                    <div class="card-body p-3">
                        <ul class="list-group">
                            <li class="list-group-item border-0 justify-content-between ps-0 pb-0 border-radius-lg">
                                <table id="budget_table" class="table table-striped">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Department ID</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for budget in budgets %}
                                        <tr>
                                            <td>{{ budget.id }}</td>
                                            <td>{{ budget.department_id }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </li>

                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}

{% block js %}
    <script src="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-2.0.2/datatables.min.js"></script>
    <script>
        // Instantiate datatables
        $(document).ready(function() {
            new DataTable('#budget_table');
        })
    </script>
{% endblock %}