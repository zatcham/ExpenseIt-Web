{% extends 'dashboard/base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="page-header min-height-300 border-radius-xl mt-4" style="background-image: url('../assets/img/curved-images/curved0.jpg'); background-position-y: 50%;">
            <span class="mask bg-gradient-primary opacity-6"></span>
        </div>
    <div class="card card-body blur shadow-blur mx-4 mt-n6 overflow-hidden">
    <div class="row gx-4">
        <div class="col-auto my-auto">
            <div class="h-100">
                <h5 class="mb-1">
                    Edit User
                </h5>
            </div>
        </div>
    </div>
    <div class="container-fluid py-4">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success" role="alert">{{ message }}</div>
        {% endfor %}
        {{ form_errors(editForm) }}
        {{ form_start(editForm) }}
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="user_edit_firstname" class="form-control-label">First Name: </label>
                    {{ form_widget(editForm.firstname, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label for="lastname-input" class="form-control-label">Last Name: </label>
                    {{ form_widget(editForm.lastname, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

        </div>

        <div class="form-group">
            <label for="phone-input" class="form-control-label">Mobile Number</label>
            {{ form_widget(editForm.mobile_number, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label for="email-input" class="form-control-label">Email</label>
{#            {{ form_widget(editForm.email, {'attr': {'class': 'form-control'}}) }}#}
        </div>
        <div class="form-group">
            <label for="image-input" class="form-control-label">Profile Picture</label>
            {{ form_widget(editForm.imageFile, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="input-group mb-3">
            <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save Changes</button>
        </div>
        {{ form_end(editForm) }}
    </div>


{% endblock %}