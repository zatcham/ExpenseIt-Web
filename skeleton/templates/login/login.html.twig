{% extends "login/base.html.twig" %}

{% block title %}Login{% endblock %}

{% block content %}

    <div class="wrapper border rounded px-5" style="background-color: #f5f5f5;">
        <img src="../assets/calid_logo_small.png" alt="Calid Logo">
        <h2>Login</h2>
        <p>Please fill in your credentials to login.</p>


        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}


        <form class="form-signin" action="{{ path('app_login') }}" method="post">
            <div class="form-group">
                <label>Username</label>
{#                <input type="text" id="username" name="_username" class="form-control" placeholder="Username" required autofocus value="{{ last_username }}">#}
                <input type="text" id="username" name="_username" value="{{ last_username }}">

                {#            <span class="invalid-feedback">{{ username_error }}</span>#}
            </div>
            <div class="form-group mt-2">
                <label>Password</label>
                <input type="password" name="_password" class="form-control" placeholder="Password" required autofocus>
{#                <span class="invalid-feedback">{{ password_error }}</span>#}
            </div>
            {#        <div class="checkbox mb-3">#}
            {#            <label>#}
            {#                <input type="checkbox" value="remember-me"> Remember me#}
            {#            </label>#}
            {#        </div>#}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="form-group mt-3">
                <input type="submit" class="btn btn-lg btn-primary btn-block mb-2" value="Login">
                <br>
                <a href="/forgot_pass">Forgotten your password?</a>
                <br>
                <a href="/register">Not got an account?</a>
                <hr>
{#                <p class="mt-2 text-muted">Server: {{ server_name }}</p>#}
                <p class="mt-1 mb-3 text-muted">&copy; <script>document.wr`ite(new Date().getFullYear())</script> Zach Matcham</p>
            </div>
        </form>
    </div>
    <script>
        // remove msg variable from url
        history.replaceState && history.replaceState(
            null, '', location.pathname + location.search.replace(/[\?&]msg=[^&]+/, '').replace(/^&/, '?')
        );
    </script>
{% endblock %}